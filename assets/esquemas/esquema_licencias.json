{
  "name": "Licencias",
  "description": "Esquema para validación de datos de licencias con goce y sin goce",
  "column_mapping": {
    "MOTIVO DE LIC.CON GOCE": "MOTIVO",
    "MOTIVO DE LIC.S.G.H": "MOTIVO"
  },
  "columns": [
    {
      "name": "PERIODO",
      "type": "string",
      "nullable": false,
      "description": "Periodo en formato YYYY-MM"
    },
    {
      "name": "DNI/CEX",
      "type": "string",
      "nullable": false,
      "description": "Documento Nacional de Identidad o Carnet de Extranjería del empleado"
    },
    {
      "name": "APELLIDO PATERNO",
      "type": "string",
      "nullable": false,
      "description": "Apellido paterno del empleado"
    },
    {
      "name": "APELLIDO MATERNO",
      "type": "string",
      "nullable": false,
      "description": "Apellido materno del empleado"
    },
    {
      "name": "NOMBRES",
      "type": "string",
      "nullable": false,
      "description": "Nombres del empleado"
    },
    {
      "name": "MOTIVO",
      "type": "string",
      "nullable": false,
      "description": "Motivo de la licencia"
    },
    {
      "name": "TIPO_LICENCIA",
      "type": "string",
      "nullable": false,
      "description": "Tipo de licencia",
      "validations": {
        "allowed_values": ["CON_GOCE", "SIN_GOCE"]
      }
    }
  ]
}